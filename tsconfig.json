{
  "compilerOptions": {
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "declaration": false,
    "module": "commonjs",
    "target": "es5",
    "outDir": "lib",
    "allowJs": true,
    "lib": [
      "es5",
      "es6"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}
